{
    "extends": "adonaix-lib/tsconfig.json",
    "compilerOptions": {
        "lib": [
            "es2023",
            "esnext.disposable"
        ],
        "target": "es2023",
        "paths": {
            "~/*": [
                "./src/Components/*",
                "./src/Polyfill/*"
            ],
            "pkg/*": [
                "./*"
            ],
            "it": [
                "./src"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
        "rollup.config.ts"
    ]
}
